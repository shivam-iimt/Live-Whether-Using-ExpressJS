<body>
{{>navbar}}

<div class="container-fluid main-header ">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
           <div class="main_content">
               <form class="temp_form">
                   <input type="text" placeholder="Enter your city name" autocomplete="off" id="cityname">
                   <input type="submit" value="search " id="submitbtn">
               </form>
           </div>
           <div class="temp_info">
               <div class="top_layer">
                   <p id="day">Tuesday</p>
                   <p id="date">13 OCT</p>
               </div> 
               <div class="main_layer">
                   <p id="city_data">Get output here</p>
                   <div class="middle_layer data_hide">
                       <p id="temp"><span id="temp_real">0</span><sup>o</sup>C</p>
                       <p id="temp_status"><i class="fa fa-cloud"></i></p>
                   </div>
               </div>
           </div>
            
        </div>
    </div>
</div>
{{>footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="js/main.js"></script>
    <script>
           const days=document.getElementById('day');
           const dates=document.getElementById('date');
               const setdate =()=>{
             const weekday =[  "Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
             const months=["Jan","Feb","Mar","Apr","May","June","July","Aug","Sep","Oct", "Nov", "Dec"
             ];  
             let curtime =new Date();
             let fdate =curtime.getDate();
             let month=months[curtime.getMonth()];
             let fday= weekday[curtime.getDay()];
             days.innerText=fday;
             dates.innerText=`${fdate} ${month}`;
         };
         setdate();
    </script>
</body>
</html>